{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@public/*": ["./public/*"]
        },
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "jsxImportSource": "react"
    }
}
