{
    "$schema": "https://turborepo.dev/schema.json",
    "ui": "tui",
    "globalDependencies": [".env"],
    "globalEnv": ["TURSO_DATABASE_URL", "TURSO_AUTH_TOKEN", "TIGRIS_STORAGE_DOMAIN"],
    "tasks": {
        "lint": {
            "dependsOn": ["^lint"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "home#dev": {
            "cache": false,
            "persistent": true,
            "inputs": ["$TURBO_DEFAULT$", ".env"],
            "env": ["DOMAIN"]
        },
        "admin#dev": {
            "cache": false,
            "persistent": true,
            "inputs": ["$TURBO_DEFAULT$", ".env"],
            "env": [
                "BETTER_AUTH_SECRET",
                "GITHUB_CLIENT_ID",
                "GITHUB_CLIENT_SECRET",
                "ALLOW_SIGNUP",
                "AI_GATEWAY_API_KEY",
                "VERCEL_CLIENT_ID",
                "VERCEL_CLIENT_SECRET",
                "TIGRIS_STORAGE_ACCESS_KEY_ID",
                "TIGRIS_STORAGE_SECRET_ACCESS_KEY",
                "TIGRIS_STORAGE_BUCKET"
            ]
        },
        "home#build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env"],
            "outputs": [".data/**", ".output/**"],
            "env": ["DOMAIN"]
        },
        "admin#build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env"],
            "outputs": [".data/**", ".output/**"],
            "env": [
                "BETTER_AUTH_SECRET",
                "GITHUB_CLIENT_ID",
                "GITHUB_CLIENT_SECRET",
                "ALLOW_SIGNUP",
                "AI_GATEWAY_API_KEY",
                "VERCEL_CLIENT_ID",
                "VERCEL_CLIENT_SECRET",
                "TIGRIS_STORAGE_ACCESS_KEY_ID",
                "TIGRIS_STORAGE_SECRET_ACCESS_KEY",
                "TIGRIS_STORAGE_BUCKET"
            ]
        }
    }
}
