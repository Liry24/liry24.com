---
import { twMerge } from 'tailwind-merge'

interface Props {
    to?: string
    tabindex?: number
    class?: string
}
const { to, tabindex, class: className } = Astro.props

const Element = to?.length ? 'a' : 'button'
---

<Element
    href={to}
    target="_blank"
    tabindex={tabindex || 0}
    type="button"
    class={twMerge(
        'p-4 rounded-lg flex items-center justify-center gap-2 hover:bg-zinc-800 cursor-pointer',
        'transition duration-100 delay-0',
        className
    )}
>
    <slot />
</Element>
