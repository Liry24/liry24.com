---
import '../styles/global.css';
import '@fontsource-variable/inter';
import Analytics from '@vercel/analytics/astro';
import { SEO } from 'astro-seo';

const title = 'Liry24';
const description = 'Personal website of Liry24';
const image = 'https://liry24.com/og.png';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <Analytics />
        <SEO
            openGraph={{
                basic: {
                    title: title,
                    type: 'website',
                    image: image,
                },
                optional: {
                    description: description,
                    siteName: title,
                    locale: 'ja_JP',
                },
                image: {
                    url: image,
                    alt: title,
                },
            }}
            twitter={{
                site: '@Liry24g',
                card: 'summary_large_image',
                image: image,
                title: title,
                description: description,
            }}
        />
    </head>
    <body class="flex justify-center text-zinc-100 bg-zinc-950">
        <div class="w-full max-w-4xl px-12">
            <slot />
        </div>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        font-family: 'Inter Variable', sans-serif;
    }
</style>
