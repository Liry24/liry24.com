---
import '../styles/global.css'
import { Font } from 'astro:assets'
import Analytics from '@vercel/analytics/astro'
import { SEO } from 'astro-seo'
import { Icon } from 'astro-icon/components'

const title = 'Liry24'
const description = '3D Artist / Developer / Gamer'
const image = 'https://liry24.com/og.png'
---

<!doctype html>
<html lang="en" class="flex w-full flex-col items-center">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <Font cssVariable="--font-geist" preload />
        <Analytics />
        <SEO
            openGraph={{
                basic: {
                    title: title,
                    type: 'website',
                    image: image,
                },
                optional: {
                    description: description,
                    siteName: title,
                    locale: 'ja_JP',
                },
                image: {
                    url: image,
                    alt: title,
                },
            }}
            twitter={{
                site: '@Liry24g',
                card: 'summary_large_image',
                image: image,
                title: title,
                description: description,
            }}
        />
    </head>
    <body
        class="flex w-full max-w-4xl flex-col items-center gap-2 bg-zinc-950 px-12 text-zinc-100"
    >
        <div class="grow">
            <slot />
        </div>

        <div class="flex w-full flex-col items-start gap-4">
            <div class="h-px w-full bg-zinc-800"></div>

            <div
                class="flex w-full flex-wrap items-center justify-between gap-x-4 gap-y-1 pb-3"
            >
                <div class="flex items-center gap-1">
                    <p
                        class="text-xs font-light tracking-[0.3rem] text-zinc-400"
                    >
                        contact
                    </p>
                    <a
                        href="/x"
                        target="_blank"
                        class="flex items-center p-1 text-zinc-400 transition-opacity hover:opacity-60 focus-visible:opacity-60"
                    >
                        <Icon name="simple-icons:twitter" />
                    </a>
                </div>
                <div class="flex items-center gap-1">
                    <p
                        class="text-xs font-light tracking-[0.3rem] text-zinc-400"
                    >
                        built with
                    </p>
                    <a
                        href="https://vercel.com"
                        target="_blank"
                        class="flex items-center p-1 text-zinc-400 transition-opacity hover:opacity-60 focus-visible:opacity-60"
                    >
                        <Icon name="simple-icons:vercel" />
                    </a>
                    <a
                        href="https://astro.build"
                        target="_blank"
                        class="flex items-center p-1 text-zinc-400 transition-opacity hover:opacity-60 focus-visible:opacity-60"
                    >
                        <Icon name="simple-icons:astro" />
                    </a>
                    <a
                        href="https://tailwindcss.com"
                        target="_blank"
                        class="flex items-center p-1 text-zinc-400 transition-opacity hover:opacity-60 focus-visible:opacity-60"
                    >
                        <Icon name="simple-icons:tailwindcss" />
                    </a>
                    <a
                        href="https://bun.sh"
                        target="_blank"
                        class="flex items-center p-1 text-zinc-400 transition-opacity hover:opacity-60 focus-visible:opacity-60"
                    >
                        <Icon name="simple-icons:bun" />
                    </a>
                    <a
                        href="https://github.com/features/copilot"
                        target="_blank"
                        class="flex items-center p-1 text-zinc-400 transition-opacity hover:opacity-60 focus-visible:opacity-60"
                    >
                        <Icon name="simple-icons:githubcopilot" />
                    </a>
                </div>
            </div>
        </div>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        font-family: var(--font-geist);
    }
</style>
