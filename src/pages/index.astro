---
import Background from '@/components/background.vue'
import Arts from '@/components/home/arts.astro'
import Posts from '@/components/home/posts.astro'
import ToolIcon from '@/components/toolIcon.astro'
import Spotify from '@/components/widgets/spotify.astro'
import Steam from '@/components/widgets/steam.astro'
import Layout from '@/layouts/default.astro'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import { getCollection } from 'astro:content'

export const prerender = true

const persona = await getCollection('persona')
const skills = await getCollection('skills')
const ranks = await getCollection('ranks')
const career = await getCollection('career')

const avatarUrl = 'https://github.com/Liry24.png'
const avatarSize = 28

if (import.meta.env.PUBLIC_VERCEL_ENV === 'production') {
    Astro.response.headers.set('Cache-Control', `max-age=${60 * 60}`) // 1 hours
    Astro.response.headers.set('CDN-Cache-Control', `max-age=${60 * 60 * 24}`) // 1 days
}
---

<Layout>
    <Background client:load class="-z-50" />

    <div class="z-10 flex flex-col items-start gap-16 pt-14 sm:pt-20">
        <h1
            class="-ml-2 text-8xl leading-none font-thin tracking-wider text-nowrap text-zinc-200 sm:text-9xl"
        >
            Liry24
        </h1>

        <div class="flex w-full flex-col gap-10">
            <div class="flex items-center gap-5">
                <Image
                    src={avatarUrl}
                    alt="Liry24 Avatar"
                    width={avatarSize}
                    height={avatarSize}
                    loading="eager"
                    class="rounded-full"
                />

                <div class="flex flex-wrap items-center gap-x-6 gap-y-2">
                    {
                        persona.map((item) => (
                            <a
                                href={item.data.url}
                                target="_blank"
                                class="flex items-center gap-2 text-zinc-400 transition hover:text-zinc-200 focus-visible:text-zinc-200"
                            >
                                <Icon name={item.data.icon} size={16} />
                                <span class="text-sm tracking-widest opacity-80">
                                    {item.data.label}
                                </span>
                            </a>
                        ))
                    }
                </div>
            </div>

            <div class="flex flex-col items-start gap-2 sm:gap-1">
                <h2
                    class="mb-2 text-xs leading-none font-light tracking-[0.4rem] text-nowrap text-zinc-400 before:content-['//']"
                >
                    skills
                </h2>
                <div class="flex w-full flex-wrap items-center gap-3">
                    {
                        skills.map((skill) => (
                            <ToolIcon
                                label={skill.data.label}
                                icon={skill.data.icon}
                                iconSize={skill.data.iconSize ?? 18}
                                class={skill.data.class}
                            />
                        ))
                    }
                </div>
            </div>

            <div class="flex flex-col items-start gap-2 sm:gap-1">
                <h2
                    class="mb-2 text-xs leading-none font-light tracking-[0.4rem] text-nowrap text-zinc-400 before:content-['//']"
                >
                    career
                </h2>
                <div
                    class="ml-0.5 flex flex-col gap-3 text-sm tracking-widest text-zinc-400"
                >
                    {
                        career.map((item) => (
                            <div class="flex items-baseline gap-4">
                                <span class="text-right font-medium text-zinc-500">
                                    {item.data.period}
                                </span>
                                <span>
                                    {item.data.position} at
                                    {item.data.company}
                                </span>
                            </div>
                        ))
                    }
                </div>
            </div>

            <div class="grid gap-3 md:grid-cols-2">
                <a
                    slot="fallback"
                    href="/spotify"
                    target="_blank"
                    class="group flex items-center gap-3 rounded-xl bg-zinc-900/60 p-3 transition-colors hover:bg-zinc-900 focus-visible:bg-zinc-900"
                >
                    <Spotify server:defer>
                        <div
                            slot="fallback"
                            class="animate-out fade-out flex size-16 w-full items-center justify-center"
                        >
                            <Icon
                                name="svg-spinners:ring-resize"
                                size="24"
                                class="text-zinc-500"
                            />
                        </div>
                    </Spotify>
                </a>

                <a
                    slot="fallback"
                    href="/steam"
                    target="_blank"
                    class="group flex items-center gap-3 rounded-xl bg-zinc-900/60 p-3 transition-colors hover:bg-zinc-900 focus-visible:bg-zinc-900"
                >
                    <Steam server:defer>
                        <div
                            slot="fallback"
                            class="animate-out fade-out flex size-16 w-full items-center justify-center"
                        >
                            <Icon
                                name="svg-spinners:ring-resize"
                                size="24"
                                class="text-zinc-500"
                            />
                        </div>
                    </Steam>
                </a>
            </div>
        </div>

        <div class="h-px w-full bg-zinc-800"></div>

        <div class="flex w-full flex-col gap-28">
            <div class="flex w-full flex-col items-start gap-2">
                <h2
                    class="mb-4 text-xs leading-none font-light tracking-[0.4rem] whitespace-nowrap text-zinc-400 before:content-['//']"
                >
                    creation circle
                </h2>

                <div class="flex flex-col gap-1">
                    <a
                        href="https://liria.me"
                        target="_blank"
                        class="flex items-baseline gap-5 transition-opacity hover:opacity-80 focus-visible:opacity-80"
                    >
                        <span
                            class="-mt-2 text-7xl font-extrabold tracking-tight text-zinc-100 sm:text-8xl"
                        >
                            Liria
                        </span>

                        <div class="flex items-center gap-2 pb-px">
                            <span
                                class="font-medium tracking-wide text-zinc-400"
                            >
                                Website
                            </span>

                            <Icon
                                name="lucide:arrow-up-right"
                                size="16"
                                class="text-zinc-400"
                            />
                        </div>
                    </a>

                    <div
                        class="flex flex-wrap items-center gap-x-6 gap-y-2 pt-2"
                    >
                        <a
                            href="https://eicosapenta.booth.pm"
                            target="_blank"
                            class="ml-1 flex items-center gap-2 transition-opacity hover:opacity-80 focus-visible:opacity-80"
                        >
                            <Icon
                                name="booth"
                                size="18"
                                class="text-zinc-300"
                            />
                            <span class="text-sm tracking-wide text-zinc-400">
                                Liria Graphics
                            </span>

                            <Icon
                                name="lucide:arrow-up-right"
                                size="16"
                                class="text-zinc-400"
                            />
                        </a>

                        <a
                            href="https://avatio.me"
                            target="_blank"
                            class="ml-1 flex items-center gap-2 transition-opacity hover:opacity-80 focus-visible:opacity-80"
                        >
                            <Icon
                                name="avatio"
                                size="18"
                                class="text-zinc-300"
                            />
                            <span class="text-sm tracking-wide text-zinc-400">
                                Avatio
                            </span>

                            <Icon
                                name="lucide:arrow-up-right"
                                size="16"
                                class="text-zinc-400"
                            />
                        </a>

                        <div class="ml-1 flex items-center gap-2">
                            <Icon
                                name="simple-icons:discord"
                                size="18"
                                class="text-zinc-300"
                            />
                            <span class="text-sm tracking-wide text-zinc-400">
                                Some Discord Bot
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex w-full flex-col items-start gap-6">
                <h2
                    class="text-xs leading-none font-light tracking-[0.4rem] text-nowrap text-zinc-400 before:content-['//']"
                >
                    contract
                </h2>

                <div
                    class="mx-1 flex w-full flex-wrap items-center justify-between gap-3"
                >
                    <span class="text-2xl font-bold">しろくま研究所</span>

                    <div class="flex flex-wrap items-center gap-x-6 gap-y-2">
                        <a
                            href="https://polarbearlab.com"
                            target="_blank"
                            class="ml-1 flex items-center gap-2 transition-opacity hover:opacity-80 focus-visible:opacity-80"
                        >
                            <Icon
                                name="lucide:globe"
                                size="18"
                                class="text-zinc-300"
                            />
                            <span class="text-sm tracking-wide text-zinc-400">
                                polarbearlab.com
                            </span>

                            <Icon
                                name="lucide:arrow-up-right"
                                size="16"
                                class="text-zinc-400"
                            />
                        </a>

                        <div class="ml-1 flex items-center gap-2">
                            <Icon
                                name="simple-icons:discord"
                                size="18"
                                class="text-zinc-300"
                            />
                            <span class="text-sm tracking-wide text-zinc-400">
                                Internal Discord Bot
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex w-full flex-col items-start gap-6">
                <h2
                    class="text-xs leading-none font-light tracking-[0.4rem] text-nowrap text-zinc-400 before:content-['//']"
                >
                    arts
                </h2>

                <Arts />
            </div>

            <div class="flex w-full flex-col items-start gap-6">
                <h2
                    class="text-xs leading-none font-light tracking-[0.4rem] text-nowrap text-zinc-400 before:content-['//']"
                >
                    posts
                </h2>

                <Posts server:defer>
                    <div
                        slot="fallback"
                        class="grid w-full grid-cols-1 gap-3 md:grid-cols-2"
                    >
                        {
                            Array.from({ length: 4 }).map(() => (
                                <div class="h-24 w-full animate-pulse rounded-lg bg-zinc-700/60" />
                            ))
                        }
                    </div>
                </Posts>
            </div>

            <div class="flex w-full flex-col items-start gap-6">
                <h2
                    class="text-xs leading-none font-light tracking-[0.4rem] text-nowrap text-zinc-400 before:content-['//']"
                >
                    peak ranks
                </h2>

                {
                    ranks.map((rank) => (
                        <a
                            href={rank.data.url}
                            target="_blank"
                            class="mx-auto flex items-center gap-2"
                        >
                            <span class="pt-px text-xl leading-none font-bold sm:text-3xl">
                                {rank.data.label}
                            </span>

                            <span class="pt-px text-xl leading-none font-thin tracking-tight sm:text-3xl">
                                {rank.data.season}
                            </span>

                            <Image
                                src={rank.data.image}
                                alt={rank.data.rank}
                                width={48}
                                height={48}
                                class="size-8 sm:size-12"
                            />
                        </a>
                    ))
                }
            </div>

