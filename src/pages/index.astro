---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import imageValRank from '@/assets/images/valorant_rank_immortal_1.png'
import Layout from '@/layouts/default.astro'
import Head from '@/components/home/head.astro'
import Arts from '@/components/home/arts.astro'
import Posts from '@/components/home/posts.astro'

export const prerender = true
---

<Layout>
    <div class="flex flex-col items-start gap-16 pt-20">
        <h1
            class="-ml-2 text-9xl leading-none font-thin tracking-wider text-nowrap text-zinc-200"
        >
            Liry24
        </h1>

        <Head />

        <div class="h-px w-full bg-zinc-800"></div>

        <div class="flex w-full flex-col gap-28">
            <div class="flex w-full flex-col items-start gap-2">
                <h2
                    class="mb-4 text-xs leading-none font-light tracking-[0.4rem] whitespace-nowrap text-zinc-400 before:content-['//']"
                >
                    creation circle
                </h2>

                <div class="flex flex-col gap-1">
                    <a
                        href="https://liria.me"
                        target="_blank"
                        class="flex items-baseline gap-5 transition-opacity hover:opacity-80 focus-visible:opacity-80"
                    >
                        <span
                            class="-mt-2 text-8xl font-extrabold tracking-tight text-zinc-100"
                        >
                            Liria
                        </span>

                        <div class="flex items-center gap-2 pb-px">
                            <span
                                class="font-medium tracking-wide text-zinc-400"
                            >
                                Website
                            </span>

                            <Icon
                                name="lucide:arrow-up-right"
                                size="16"
                                class="text-zinc-400"
                            />
                        </div>
                    </a>

                    <div class="flex flex-wrap items-center gap-6 pt-2">
                        <a
                            href="https://eicosapenta.booth.pm"
                            target="_blank"
                            class="ml-1 flex items-center gap-2 transition-opacity hover:opacity-80 focus-visible:opacity-80"
                        >
                            <Icon
                                name="booth"
                                size="18"
                                class="text-zinc-300"
                            />
                            <span class="text-sm tracking-wide text-zinc-400">
                                Liria Graphics
                            </span>

                            <Icon
                                name="lucide:arrow-up-right"
                                size="16"
                                class="text-zinc-400"
                            />
                        </a>

                        <a
                            href="https://avatio.me"
                            target="_blank"
                            class="ml-1 flex items-center gap-2 transition-opacity hover:opacity-80 focus-visible:opacity-80"
                        >
                            <Icon
                                name="avatio"
                                size="18"
                                class="text-zinc-300"
                            />
                            <span class="text-sm tracking-wide text-zinc-400">
                                Avatio
                            </span>

                            <Icon
                                name="lucide:arrow-up-right"
                                size="16"
                                class="text-zinc-400"
                            />
                        </a>

                        <div class="ml-1 flex items-center gap-2">
                            <Icon
                                name="simple-icons:discord"
                                size="18"
                                class="text-zinc-300"
                            />
                            <span class="text-sm tracking-wide text-zinc-400">
                                Some Discord Bot
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex w-full flex-col items-start gap-6">
                <h2
                    class="text-xs leading-none font-light tracking-[0.4rem] text-nowrap text-zinc-400 before:content-['//']"
                >
                    contract
                </h2>

                <div
                    class="mx-1 flex w-full flex-wrap items-center justify-between gap-3"
                >
                    <span class="text-2xl font-bold">しろくま研究所</span>

                    <div class="flex flex-wrap items-center gap-6">
                        <a
                            href="https://polarbearlab.com"
                            target="_blank"
                            class="ml-1 flex items-center gap-2 transition-opacity hover:opacity-80 focus-visible:opacity-80"
                        >
                            <Icon
                                name="lucide:globe"
                                size="18"
                                class="text-zinc-300"
                            />
                            <span class="text-sm tracking-wide text-zinc-400">
                                polarbearlab.com
                            </span>

                            <Icon
                                name="lucide:arrow-up-right"
                                size="16"
                                class="text-zinc-400"
                            />
                        </a>

                        <div class="ml-1 flex items-center gap-2">
                            <Icon
                                name="simple-icons:discord"
                                size="18"
                                class="text-zinc-300"
                            />
                            <span class="text-sm tracking-wide text-zinc-400">
                                Internal Discord Bot
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex w-full flex-col items-start gap-6">
                <h2
                    class="text-xs leading-none font-light tracking-[0.4rem] text-nowrap text-zinc-400 before:content-['//']"
                >
                    arts
                </h2>

                <Arts />
            </div>

            <div class="flex w-full flex-col items-start gap-6">
                <h2
                    class="text-xs leading-none font-light tracking-[0.4rem] text-nowrap text-zinc-400 before:content-['//']"
                >
                    posts
                </h2>

                <Posts server:defer />
            </div>

            <div class="flex w-full flex-col items-start gap-6">
                <h2
                    class="text-xs leading-none font-light tracking-[0.4rem] text-nowrap text-zinc-400 before:content-['//']"
                >
                    peak ranks
                </h2>

                <a
                    href="/valorant"
                    target="_blank"
                    class="mx-auto flex items-center gap-2"
                >
                    <span class="pt-px text-xl leading-none">VALORANT</span>
                    <img
                        src={imageValRank.src}
                        alt="Immortal 1"
                        width={48}
                        height={48}
                    />
                </a>
            </div>
        </div>
    </div>
</Layout>
